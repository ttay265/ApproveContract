<core:FragmentDefinition
        xmlns:core="sap.ui.core"
        xmlns:f="sap.ui.layout.form"
        xmlns="sap.m"
        displayBlock="true">
    <Dialog title="Sales Group" type="Standard">
        <buttons>
            <Button text="Ok" type="Emphasize" press="onSearchHelpOk"/>
            <Button type="Transparent" text="Close" press="onDialogClose"/>
        </buttons>
        <content>
            <SearchField/>
            <Table items="{vhSalesGroup>/}">
                <columns>
                    <Column>
                        <Label text="Customer"/>
                    </Column>
                    <Column>
                        <Label text="Name"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{vhSalesGroup>SalesOrg}"/>
                            <Text text="{vhSalesGroup>Description}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Dialog>
</core:FragmentDefinition>
