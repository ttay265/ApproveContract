<core:FragmentDefinition
        xmlns:core="sap.ui.core"
        xmlns="sap.m"
        xmlns:f="sap.ui.layout.form"
        displayBlock="true">
    <ViewSettingsDialog
            confirm="handleConfirmFilter"
            resetFilters="handleResetFilters">
        <filterItems>
            <!--Sold To Party Filter-->
            <ViewSettingsCustomItem
                    id="fSoldToParty"
                    text="Sold To Party"
                    key="fSoldToParty">
                <customControl>
                    <f:SimpleForm id="SoldToParty">
                        <Label text="From"/>
                        <Input valueHelpRequest="onValueHelpPressed" value="{filter>/soldToParty_Low}" maxLength="10"
                               showValueHelp="true"/>
                        <Label text="To"/>
                        <Input valueHelpRequest="onValueHelpPressed" value="{filter>/soldToParty_High}" maxLength="10"
                               showValueHelp="true"/>
                    </f:SimpleForm>
                </customControl>
            </ViewSettingsCustomItem>
            <!--Document Date Filter-->
            <ViewSettingsCustomItem
                    id="fDocumentDate"
                    text="Document Date"
                    key="fDocumentDate">
                <customControl>
                    <f:SimpleForm id="DocumentDate">
                        <Label text="From"/>
                        <DatePicker displayFormat="dd.MM.yyyy" dateValue="{filter>/documentDate_Low}"/>
                        <Label text="To"/>
                        <DatePicker displayFormat="dd.MM.yyyy" dateValue="{filter>/documentDate_High}"/>
                    </f:SimpleForm>
                </customControl>
            </ViewSettingsCustomItem>
            <!--Sales Org Filter-->
            <ViewSettingsCustomItem
                    id="fSalesOrg"
                    text="Sales Organization"
                    key="fSalesOrg">
                <customControl>
                    <f:SimpleForm id="SalesOrg">
                        <Label text="From"/>
                        <Input valueHelpRequest="onValueHelpPressed" value="{filter>/salesOrg_Low}" maxLength="10"
                               showValueHelp="true"/>
                        <Label text="To"/>
                        <Input valueHelpRequest="onValueHelpPressed" value="{filter>/salesOrg_High}" maxLength="10"
                               showValueHelp="true"/>
                    </f:SimpleForm>
                </customControl>
            </ViewSettingsCustomItem>
            <!--Distribution Channel Filter-->
            <ViewSettingsCustomItem
                    id="fDistChannel"
                    text="Distribution Channel"
                    key="fDistChannel">
                <customControl>
                    <f:SimpleForm id="DistChannel">
                        <Label text="From"/>
                        <Input valueHelpRequest="onValueHelpPressed" value="{filter>/distChannel_Low}" maxLength="10"
                               showValueHelp="true"/>
                        <Label text="To"/>
                        <Input valueHelpRequest="onValueHelpPressed" value="{filter>/distChannel_High}" maxLength="10"
                               showValueHelp="true"/>
                    </f:SimpleForm>
                </customControl>
            </ViewSettingsCustomItem>
            <!--Sales Office Filter-->
            <ViewSettingsCustomItem
                    id="fSalesOffice"
                    text="Sales Office"
                    key="fSalesOffice">
                <customControl>
                    <f:SimpleForm id="SalesOffice">
                        <Label text="From"/>
                        <Input valueHelpRequest="onValueHelpPressed" value="{filter>/salesOffice_Low}" maxLength="10"
                               showValueHelp="true"/>
                        <Label text="To"/>
                        <Input valueHelpRequest="onValueHelpPressed" value="{filter>/salesOffice_High}" maxLength="10"
                               showValueHelp="true"/>
                    </f:SimpleForm>
                </customControl>
            </ViewSettingsCustomItem>
            <!--Sales Group Filter-->
            <ViewSettingsCustomItem
                    id="fSalesGroup"
                    text="Sales Group"
                    key="fSalesGroup">
                <customControl>
                    <f:SimpleForm id="SalesGroup">
                        <Label text="From"/>
                        <Input valueHelpRequest="onValueHelpPressed" value="{filter>/salesGroup_Low}" maxLength="10"
                               showValueHelp="true"/>
                        <Label text="To"/>
                        <Input valueHelpRequest="onValueHelpPressed" value="{filter>/salesGroup_High}" maxLength="10"
                               showValueHelp="true"/>
                    </f:SimpleForm>
                </customControl>
            </ViewSettingsCustomItem>
            <!--Customer Group Filter-->
            <ViewSettingsCustomItem
                    id="fCustomerGroup"
                    text="Customer Group"
                    key="fCustomerGroup">
                <customControl>
                    <f:SimpleForm id="CustomerGroup">
                        <Label text="From"/>
                        <Input valueHelpRequest="onValueHelpPressed" value="{filter>/customerGroup_Low}" maxLength="10"
                               showValueHelp="true"/>
                        <Label text="To"/>
                        <Input valueHelpRequest="onValueHelpPressed" value="{filter>/customerGroup_High}" maxLength="10"
                               showValueHelp="true"/>
                    </f:SimpleForm>
                </customControl>
            </ViewSettingsCustomItem>
            <!--Sales Order Type Filter-->
            <ViewSettingsCustomItem
                    id="fSalesOrderType"
                    text="Sales Order Type"
                    key="fSalesOrderType">
                <customControl>
                    <f:SimpleForm>
                        <Label text="From"/>
                        <Input valueHelpRequest="onValueHelpPressed" value="{filter>/salesOrderType_Low}" maxLength="10"
                               showValueHelp="true"/>
                        <Label text="To"/>
                        <Input valueHelpRequest="onValueHelpPressed" value="{filter>/salesOrderType_High}"
                               maxLength="10" showValueHelp="true"/>
                    </f:SimpleForm>
                </customControl>
            </ViewSettingsCustomItem>
        </filterItems>
    </ViewSettingsDialog>
</core:FragmentDefinition>
