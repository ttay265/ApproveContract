<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Dialog contentWidth="30rem" stretch="{device>/system/phone}" title="{i18n>TITLE_MATERIAL_PLANT_HELP}"
            verticalScrolling="true">
        <content>
            <SearchField id="_inpSearchMatPlantHelp" showSearchButton="true" search="onMatPlantHelpSearch"/>
            <List itemPress="_onMaterialSelected" noDataText="{i18n>InputToSearch}" growing="true" growingThreshold="50"
                  growingScrollToLoad="true" mode="SingleSelectMaster" items="{MatHelp>/}">
                <StandardListItem type="Active" title="{MatHelp>Material}" info="{MatHelp>Description}"/>
            </List>
        </content>
        <buttons>
            <Button text="{i18n>CLOSE}" press="onDialogClose"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>