<core:FragmentDefinition
        xmlns:core="sap.ui.core"
        xmlns:f="sap.ui.layout.form"
        xmlns="sap.m"
        displayBlock="true">
    <Dialog contentHeight="20rem" stretch="{device>/system/phone}" beforeOpen="beforeOpen" showHeader="false"
            type="Standard">
        <buttons>
            <Button type="Transparent" text="Close" press="onDialogClose"/>
        </buttons>
        <content>
            <SearchField/>
            <Table items="{valueHelp>/}" growing="true"
                   growingScrollToLoad="true" growingThreshold="15">
                <columns>
                    <Column>
                        <Label text="{valueHelp>/label}"/>
                    </Column>
                    <Column>
                        <Label text="Name"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem press="onSearchHelpOk" type="Active">
                        <cells>
                            <Text text="{valueHelp>Id}"/>
                            <Text text="{valueHelp>Name}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Dialog>
</core:FragmentDefinition>
