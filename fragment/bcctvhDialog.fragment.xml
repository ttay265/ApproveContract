<core:FragmentDefinition
        xmlns:core="sap.ui.core"
        xmlns="sap.m"
        displayBlock="true">
    <Dialog title="{i18n>tt_resourceReport}">
        <buttons>
            <Button icon="sap-icon://undo"
                    press="__btn_Cancel"/>
        </buttons>
        <content>
            <VBox justifyContent="SpaceBetween"
                  class="sapUiMarginBeginEnd"
                  alignContent="Center">
                <HBox class="sapUiTinyMarginBeginEnd"
                      width="100%"
                      wrap="NoWrap"
                      justifyContent="SpaceAround">
                    <items>
                        <VBox width="{= ${device>/system/phone} ? '100%' : '200px' }">
                            <Label class="sapUiTinyMarginTop" text="{i18n>lbl_slocNumber}"/>
                            <SearchField
                                    enabled="false"
                                    showRefreshButton="false"
                                    search="onGetMLSX"
                                    id="inp_MLSX__"
                                    value="{globalProperties>/Wempf}"
                                    width="{= ${device>/system/phone} ? '100%' : '200px' }"/>
                        </VBox>
                        <VBox width="{= ${device>/system/phone} ? '100%' : '300px' }">
                            <Label class="sapUiTinyMarginTop" text="{i18n>lbl_portion}"/>
                            <TextArea design="Bold"
                                      growingMaxLines="3"
                                      id="inp_SPTL__"
                                      value="{globalProperties>/Ferth}"
                                      editable="false"
                                      width="{= ${device>/system/phone} ? '100%' : '210px' }"/>
                        </VBox>
                        <VBox width="{= ${device>/system/phone} ? '100%' : '300px' }">
                            <Label class="sapUiTinyMarginTop" text="{i18n>lbl_resource}"/>
                            <Label design="Bold" text="{globalProperties>/Arbpl}"
                                   width="{= ${device>/system/phone} ? '100%' : '150px' }"/>
                            <Label design="Bold" text="{globalProperties>/Ktext}"
                                   width="{= ${device>/system/phone} ? '100%' : '150px' }"/>
                        </VBox>
                    </items>
                </HBox>
            </VBox>
            <VBox justifyContent="SpaceBetween" class="sapUiMarginBeginEnd" alignContent="Center">
            </VBox>
            <Table noDataText="{i18n>lblNoData}" growingScrollToLoad="true"
                   id="tb_rsDetailReport"
                   inset="{= !${device>/system/phone} }"
                   items="{ path: 'rsDetailReport>/results' }">
                <columns>
                    <Column width="35px" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                        <Label text="{i18n>col_STT}"/>
                    </Column>
                    <Column width="35%" hAlign="Left" demandPopin="true" popinDisplay="Inline">
                        <Label text="{i18n>col_IndexName}"/>
                    </Column>
                    <Column width="15%" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                        <Label text="{i18n>col_GT}"/>
                    </Column>
                    <Column width="12%"  hAlign="Center" demandPopin="true" popinDisplay="Block">
                        <Label text="{i18n>col_Status}"/>
                    </Column>
                    <Column width="10%" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                        <Label text="{i18n>col_Min}"/>
                    </Column>
                    <Column width="10%" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                        <Label text="{i18n>col_Max}"/>
                    </Column>
                    <Column width="12%" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                        <Label text="{i18n>col_CreateDat}"/>
                    </Column>
                    <Column width="12%" hAlign="Center" demandPopin="true" popinDisplay="Inline">
                        <Label text="{i18n>col_CreateTim}"/>
                    </Column>
                    <Column width="30%" hAlign="Left" demandPopin="true" popinDisplay="Inline">
                        <Label text="{i18n>col_Notes}"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem class="sapUiTinyMarginBeginEnd">
                        <cells>
                            <Text text="{rsDetailReport>Wrinr}"/>
                            <Text text="{rsDetailReport>Atbez}"/>
                            <Text text="{rsDetailReport>Atwrt}"/>
                            <ObjectStatus
                                    visible="{=${rsDetailReport>Atfor}==='NUM' ? true : false }"
                                    class="sapUiSmallMarginBottom"
                                    text="{resourceDetail>Atfor}"
                                    icon="{=${rsDetailReport>Atfor}==='NUM' &amp;&amp; parseFloat(${rsDetailReport>Minva}) > parseFloat(${rsDetailReport>Atwrt}) || parseFloat(${rsDetailReport>Atwrt}) > parseFloat(${rsDetailReport>Maxva}) ? 'sap-icon://message-warning' : 'sap-icon://message-success' }"
                                    state="{=${rsDetailReport>Atfor}==='NUM' &amp;&amp; parseFloat(${rsDetailReport>Minva}) > parseFloat(${rsDetailReport>Atwrt}) || parseFloat(${rsDetailReport>Atwrt}) > parseFloat(${rsDetailReport>Maxva}) ? 'Warning' : 'Success' }" />
                            <Text text="{=${rsDetailReport>Minva}>0 ? ${rsDetailReport>Minva} : ' ' }"/>
                            <Text text="{=${rsDetailReport>Maxva}>0 ? ${rsDetailReport>Maxva} : ' ' }"/>
                            <Text text="{ path: 'rsDetailReport>Crdat', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy' }}"/>
                            <Text text="{ path: 'rsDetailReport>Crtim', type: 'sap.ui.model.odata.type.Time', formatOptions: { pattern: 'HH:mm:ss' }}"/>
                            <Text text="{rsDetailReport>Notes}" textAlign="Left" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Dialog>
</core:FragmentDefinition>