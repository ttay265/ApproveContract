<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        controllerName="ZAC_APP.controller.Master">
    <Page title="All items(1)" showHeader="true" showFooter="true">
        <content>
            <PullToRefresh id="_refresh"
                           refresh="onRefresh">
            </PullToRefresh>
            <List   growingThreshold="8"
                    growing="true"
                    mode="SingleSelectMaster"
                    growingScrollToLoad="true"
                    items="{header>/}"
                    itemPress="navToDetail"
                    noDataText="{i18n>noResource}">
                <items>
                    <ObjectListItem title="{header>CustomerName}" intro="{header>ContractNo}" number="{header>Total}" numberUnit="{header>Currency}">
                        <ObjectAttribute title="Customer Ref No" text="{header>CustomerRefNo}"/>
                    </ObjectListItem>

                </items>
            </List>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button press="onOpenSort" type="Transparent" icon="sap-icon://sort"/>
                <Button press="onOpenFilter" type="Transparent" icon="sap-icon://filter"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>