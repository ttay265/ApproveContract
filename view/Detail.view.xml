<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core"
        xmlns:form="sap.ui.layout.form"
        controllerName="ZAC_APP.controller.Detail" xmlns="sap.m">
    <Page title="Contract Number" showFooter="true">
        <content>
            <Panel expandable="false" expanded="false">
                <form:SimpleForm
                        editable="false"
                        layout="ResponsiveGridLayout"
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="0"
                        emptySpanL="0"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="2"
                        columnsL="1"
                        columnsM="2"
                        singleContainerFullSize="false">
                    <core:Title text=""/>
                    <Label text="Contract Number"/>
                    <Text text="{detail1>/ContractNo}"/>
                    <Label text="Customer Ref No"/>
                    <Text text="{detail1>/CustomerRefNo}"/>
                    <Label text="Customer Ref Date"/>
                    <Text text="{detail1>/CustomerRefDate}"/>
                    <Label text="Customer Name"/>
                    <Text text="{detail1>/CustomerName}"/>
                    <Label text="Document Date"/>
                    <Text text="{detail1>/DocumentDate}"/>
                    <core:Title text=""/>
                    <Label text="Payment Term Des "/>
                    <Text text="{detail1>/PaymentTermDes}"/>
                    <Label text="Net Value"/>
                    <Text text="{detail1>/NetValue}"/>
                    <Label text="Tax"/>
                    <Text text="{detail1>/Tax}"/>
                    <Label text="Total"/>
                    <Text text="{detail1>/Total}"/>
                    <Text text="VND"/>
                </form:SimpleForm>
            </Panel>
            <Panel headerText="See more" expandable="true" expanded="false">
                <content>
                    <form:SimpleForm
                            editable="false"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="4"
                            labelSpanL="4"
                            labelSpanM="4"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="0"
                            emptySpanL="0"
                            emptySpanM="4"
                            emptySpanS="0"
                            columnsXL="2"
                            columnsL="1"
                            columnsM="2"
                            singleContainerFullSize="false">
                        <Label text="{i18n>OpenItem}"/>
                        <Text text="{detail1>OpenAmt}"/>
                        <Label text="{i18n>SpecialOpenItem}"/>
                        <Text text="{detail1>SpecAmt}"/>
                        <Label text="{i18n>TotalOpen}"/>
                        <Text text="{detail1>TotalAmt}"/>
                        <Label text="{i18n>NotedItem}"/>
                        <Text text="{detail1>NotedAmt}"/>
                    </form:SimpleForm>
                </content>
            </Panel>
            <Table items="{detail2>/}">
                <columns>
                    <Column>
                        <Label text="Material No"/>
                    </Column>
                    <Column>
                        <Label text="Description"/>
                    </Column>
                    <Column>
                        <Label text="Quantity"/>
                    </Column>
                    <Column>
                        <Label text="Uom"/>
                    </Column>
                    <Column>
                        <Label text="Unit Price"/>
                    </Column>
                    <Column>
                        <Label text="Net Value"/>
                    </Column>
                    <Column>
                        <Label text="Tax"/>
                    </Column>
                    <Column>
                        <Label text="Total"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{detail2>Material}"/>
                            <Text text="{detail2>MaterialDescription}"/>
                            <Text text="{detail2>TargetQuantity}"/>
                            <Text text="{detail2>TargetQuantityUoM}"/>
                            <Text text="{
    parts: [
        {path: 'detail2>NetPrice'},
        {path: 'detail2>Currency'}
    ],
    type: 'sap.ui.model.type.Currency',
    formatOptions: {
        showMeasure: false
    }
}"/>
                            <Text text="{
    parts: [
        {path: 'detail2>NetValue'},
        {path: 'detail2>Currency'}
    ],
    type: 'sap.ui.model.type.Currency',
    formatOptions: {
        showMeasure: false
    }
}"/>
                            <Text text="{
    parts: [
        {path: 'detail2>TaxAmt'},
        {path: 'detail2>Currency'}
    ],
    type: 'sap.ui.model.type.Currency',
    formatOptions: {
        showMeasure: false
    }
}"/>
                            <Text text="{
    parts: [
        {path: 'detail2>TotalAmt'},
        {path: 'detail2>Currency'}
    ],
    type: 'sap.ui.model.type.Currency',
    formatOptions: {
        showMeasure: false
    }
}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button press="onApproveContract" type="Accept" text="Accept"/>
                <Button press="onRejectContract" type="Reject" text="Reject"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>